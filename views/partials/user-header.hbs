<header class='bg-white' id="home">
  <div id='head' style="z-index: 1; position: fixed;" class=" container-fluid shadow-sm   bg-white">
    <div class="row clearfix ">

      <div class="">
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
          <a style="color: black;" class="   navbar-brand" href="/">Shopping Cart</a>
          {{#if user}}
          <div class="ms-auto  dropdown">
            <button class="btn btn-light dropdown-toggle nav-item" type="button" id="dropdownMenu2" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Hi, {{user.user_name}}
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <a href='#' class="btn btn-success dropdown-item text-dark" type="button">Your Account</a>
              <a href='#' class="btn btn-success dropdown-item text-secondary" type="button">Your Orders</a>
              <a href='/signout' class="btn btn-success dropdown-item text-secondary " type="button">sign Out</a>
            </div>
          </div>

          {{else}}
          <div class="ms-auto  dropdown">
            <button  class="btn  btn-light dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Hi, Sign in
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <a href='#' class="btn btn-success dropdown-item text-secondary disabled" type="button">Your Account</a>
              <a href='#' class="btn btn-success dropdown-item text-secondary disabled" type="button">Your Orders</a>
              <a href='/login' class="btn btn-success dropdown-item text-dark " type="button">Sign In</a>
            </div>
          </div>
          {{/if}}

          
          
          <div class="  " id="navbarSupportedContent">
            <ul class="ms-auto nav text-right navbar-nav  ">
              <li class="nav-item  ">
                <a style="color: black;" class="nav-link  " type="button" role="button"
                  href="/cart">Cart<h6 style="display: inline;"><span class="badge ms-1 badge-info border text-dark border-dark">{{cartCount}}</span></h6> </a>
              </li>
            </ul>
          </div>


        </nav>
      </div>
    </div>
  </div>
</header>