<section id='viewProducts' class="cardcrop bg-light container-fluid" style="padding-top: 4em;padding-bottom:5em;" >
  <div id='products' class="">
    <div class="container">
      <div class="card-columns row ">
        {{#each products}}
        <div class="col-md-3">
          <div class="card" style="width: 15rem;">
            <img class='p-4 card-img-top ' style="height: inherit;width: inherit;" src="product-images/{{this._id}}.jpeg" alt="" />
            <div class="card-body">
              <h5 class="card-title">{{this.product_name}}</h5>
              <p class="card-text">{{this.product_description}}</p>
              <div class=" card-footer">
                <h4 class=" ">{{this.product_price}}</h4>
                <button class="btn btn-warning " onclick="addToCart('{{this._id}}')" >Add To Cart</button>
                {{!-- <a href="cart?productId={{this._id}}" style='float: right;' class=" btn btn-primary">Add To Cart</a> --}}
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>