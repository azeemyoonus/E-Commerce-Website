<style>

</style>
<section class="cardcrop bg-light container-fluid" style="padding-top: 4em;padding-bottom:5em;">

    <section style="" class="col-7 col-md-8">
        {{#each cartProducts }}

        <div class="">
            <div class="ms-1 me-1 ps-3 bg-muted border rounded shadow-sm   ">
                <div class="py-3 row ">
                    {{#each cartProductDetails}}
                    <img style="height: 10rem; width:8rem;" class="col-md-5 mx-auto "
                        src="product-images/{{this._id}}.jpeg" alt="product image cap">
                    <div class=" mx-auto   col-md-7">
                        <h5 class=" card-title">{{this.product_name}}</h5>
                       <h5 class="card-body" >{{this.product_price}}</h5>
                    </div>
                    {{/each}}
                    <div class="pt-3 text-muted">
                        <button class="btn btn-muted badge  border ms-2 py-1 fw-light text-dark">-</button>
                        <span class="badge border text-dark ms-2 py-1 ">{{products.quantity}}</span>
                        <button class="btn btn-muted badge border ms-2 py-1 fw-light text-dark ">+</button>
                        <button
                            class="btn btn-muted shadow-none badge py-1 border ms-5 py-2 fw-light text-dark">Remove</button>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </section>

    <aside class="sidenav col-md-4 pe-2 shadow-sm" style="float: right ">
        <div style="" class=" ">
            <div class="ps-3 pt-3">
                <div class=" row ">
                    <div class="card border-white ">
                        <h5 class=" card-header bg-white me-2">Price Details</h5>
                        <div class="mt-3">
                            <p style="display: inline;" class="">Price ({{c}}) items </p>
                            <p style="display: inline;float: right;" class="me-2 text-right text-muted"> Real Cost</p>
                        </div>

                         <div>
                            <p style="display: inline;" class="">Delivery Charges</p>
                            <p style="display: inline;float: right;" class="me-2 text-right text-success"> Free</p>
                        </div>

                        <hr class="text-dark my-4">
                        <div class="">
                            <h4 style="display: inline;" class="text-muted" >Total Price</h4>
                            <p style="display: inline;float: right;" class="text-muted me-2">cost</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </aside>
</section>