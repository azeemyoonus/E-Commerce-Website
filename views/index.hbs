
<section>
<div class="">
  <div class="container">
    <div class="row">
      {{#each products}}
        <div class="col-md-3">
          <div class="card" style="width: 18rem;">
            <img class='img-flex'  src="{{this.image}}"  class="card-img-top" alt="iphone 11 " />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Buy</a>
            </div>

          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
</section>