<section>
    <div class="container">
        <div class='mt-3 row ml-auto'>
            <a href="admin/add-products" class="btn btn-white border-success ">Add product</a>
        </div>
        <table class="mt-3 table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
      {{ nbr}}
    <tr>
      <th scope="row">{{this}}</th>
      <td>{{this.product_name}}</td>
      <td>{{this.product_price}}</td>
      <td>{{this.product_description}}</td>
      <td><img style="height:50px;width:50px;" src="product-images/{{this._id}}.jpeg" alt="Product-photo"></td>
      <td>
        <a href="admin/edit-products?id={{this._id}}"  class="btn btn-warning" >Edit</a>
         <a href="admin/delete-product?id={{this._id}}" onclick="return confirm('Are you sure you want to delete the item {{this.product_name}}?');" class="btn btn-warning" >Delete</a> </td>
    </tr>
   
    {{/each}}
</table>
    </div>
</section>